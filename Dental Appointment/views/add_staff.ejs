<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Staff Member</h3>
                </div>
                <div class="card-body p-4 ">
                    <form action="/addstaff" method="post" id="add-form" enctype="multipart/form-data">
                        
                        <div class="mb-3">
                            <strong><label for="name">Name:</label></strong>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Your Name" required />
                        </div>

                        <div class="mb-3">
                           <strong> <label for="email">Email:</label></strong>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Your Email" required />
                        </div>

                        <div class="mb-3">
                           <strong> <label for="phone">Phone No:</label></strong>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Your Phone Number" required />
                        </div>

                        <div class="mb-3">
                            <label for="password">usertype</label>
                            <select name="usertype" id="usertype">
                              <option value="staff">Staff</option>
                              <option value="admin">Admin</option>
                            </select>
                          </div>

                        <div class="mb-3">
                           <strong> <label for="image" class="form-label">Select Image</label></strong>
                            <input class="form-control form-control-lg" type="file" name="image" required />
                        </div>
                        
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Submit" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>