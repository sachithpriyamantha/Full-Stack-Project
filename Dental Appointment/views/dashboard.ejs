    <div><img src="images/article.png" width="150" class="img-thumbnail" ></div>
    <br>
    <div>  
          
            <button class="btn" onclick="articleView()">Articles view</button>

           
            <script>
                function articleView() {
                    window.location.href = '/blogView';
                }
            </script>
    
             
              <button class="btn" onclick="articleAdd()">Articles Add</button>
    
            
              <script>
                  function articleAdd() {
                      window.location.href = '/add_blog';
                  }
              </script>                                 
</div>
</div>



<div class="card">
    <h3>STAFF</h3>
    <div><img src="images/staff.png" width="150" class="img-thumbnail" ></div>
    <br>
    <div>  
        <button class="btn" onclick="staffView()">Staff view</button>

        
        <script>
            function staffView() {
                window.location.href = '/staffView';
            }
        </script>
        
         
          <button class="btn" onclick="staffAdd()">Staff Add</button>
        
         
          <script>
              function staffAdd() {
                  window.location.href = '/add_staff';
              }
          </script>                      
</div>
</div>


  <div id="chat" class="card">
    <h3>CHATHUB</h3>
    <div><img src="images/chat.png" width="150" class="img-thumbnail" ></div>
    <br>
    <div>  
        <button class="btn" onclick="chatAdmin()">CHAT</button>
        
        <script>
            function chatAdmin() {
                window.location.href = '/admin', '_blank';

            }
        </script>

</div>
</div>

