<%- include('layout/header') %>


<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit appoinment (<%= user.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/updateAppoint/<%= user._id %>" method="post" id="add-form">
                        <div class="md-3">
                            <label for="name">Patient Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Patient Name" value="<%= user.name %>" required />
                        </div>

                        <div class="mb-3">
                            <label for="age">Patient Age</label>
                            <input type="text" name="age" class="form-control form-control-lg" placeholder="" value="<%= user.age %>" required />
                        </div>

                        <div class="mb-3">
                            <label for="phone">Phone Number</label>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Your Phone Number" value="<%= user.phone %>" required />
                        </div>

                        <div class="mb-3">
                            <label for="phone">Time</label>
                            <input type="datetime-local" id="time" name="time" value="<%= user.time.toISOString().slice(0, 16) %>" required>
                        </div>
                        
                        
        
                            <div class="mb-3">
                                <label for="service">Service</label>
                                <select name="service" id="service" required>
                                    <option value="Tooth extraction" <%= user.service === 'Tooth extraction' ? 'selected' : '' %>>Tooth extraction</option>
                                    <option value="Dental Cleanings and Check-ups" <%= user.service === 'Dental Cleanings and Check-ups' ? 'selected' : '' %>>Dental Cleanings and Check-ups</option>
                                    <option value="Dental Fillings" <%= user.service === 'Dental Fillings' ? 'selected' : '' %>>Dental Fillings</option>
                                    <option value="Teeth Whitening" <%= user.service === 'Teeth Whitening' ? 'selected' : '' %>>Teeth Whitening</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="doctor">Select Doctor</label>
                                <select name="doctor" id="doctor" required>
                                    <option value="Dr. Prachi Deval" <%= user.doctor === 'Dr. Prachi Deval' ? 'selected' : '' %>>Dr. Prachi Deval</option>
                                    <option value="Dr. Rohan Nashikkar" <%= user.doctor === 'Dr. Rohan Nashikkar' ? 'selected' : '' %>>Dr. Rohan Nashikkar</option>
                                    <option value="Dr. Pinal Jain" <%= user.doctor === 'Dr. Pinal Jain' ? 'selected' : '' %>>Dr. Pinal Jain</option>
                                    <option value="Dr. Rahul Kumar" <%= user.doctor === 'Dr. Rahul Kumar' ? 'selected' : '' %>>Dr. Rahul Kumar</option>
                                </select>
                            </div>
                            
                            
                        
                        <input type="hidden" name="old_image" value="<%= user.image %>"/>
                        
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
