<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-info">
                    <h3 class="text-light">Edit Service - <%= service.name %></h3>
                </div>
                <div class="card-body p-4">
                    <form action="/updateService/<%= service._id %>" method="post" id="add-form" enctype="multipart/form-data">

                        <div class="mb-2">
                            <strong><label for="name">Name:</label></strong>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Your Service" value="<%= service.name %>" required />
                        </div>

                        <div class="mb-3">
                            <strong><label for="desc">Description:</label></strong>
                            <input type="text" name="desc" class="form-control form-control-lg" cols="4" rows="6" placeholder="Description"  value="<%= service.desc %>" required/>
                        </div>

                        <div class="mb-3">
                            <strong><label for="image" class="form-label">Select Image</label></strong>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <img src="/<%= service.image %>" width="100" class="img-thumbnail mt-1">
                        </div>

                        <input type="hidden" name="old_image" value="<%= service.image %>"/>
                        
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Service" class="btn btn-info btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
