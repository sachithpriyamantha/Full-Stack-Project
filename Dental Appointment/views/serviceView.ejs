<%- include('layout/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
#tabledata {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#tabledata td, #tabledata th {
  border: 1px solid #ddd;
  padding: 8px;
}

#tabledata tr:nth-child(even){background-color: #f2f2f2;}

#tabledata tr:hover {background-color: #ddd;}

#tabledata th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: center;
  background-color: #58afbf;
  color: white;
}

#tabledata td{
    text-align: center;
}

h2{
text-align: center;
color: #43818c;
padding: 10px;

}
    </style>
</head>
<body>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <h2>SERVICES</h2>
                <% if (message) { %>
                    <div class="alert alert-dismissibe fade show alert- <%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert"
                        aria-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>
    
                <div class="table-responsive">
                    <% if(service != '') { %>
                        <table id="tabledata">
                            <thead>
                                <tr > 
                                    
                                    <th>Service Name</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% service.forEach((row, index) => { %>
                                    <tr class="table-success">
                                        
                                        <td><%= row.name %></td>
                                        <td><img src="<%= row.image %>" width="80" class="img-thumbnail" ></td>
                                        <td><%= row.desc %></td>
                                        
                                        <td>
                                            <a href="/editService/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            
                                            <a href="/deleteService/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No services found in the database</h1>
                    <% } %>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<%- include('layout/footer') %>