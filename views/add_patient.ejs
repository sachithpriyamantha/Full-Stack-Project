<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Enter Your Details</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/addPatient" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="md-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Your Name" required />
                        </div>

                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Your Email" required />
                        </div>

                        <div class="mb-3">
                            <label for="phone">Phone</label>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Your Phone Number" required />
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image (Upload your image for a personalized account)</label>
                            <input class="form-control form-control-lg" type="file" name="image"/>
                        </div>
                        
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>