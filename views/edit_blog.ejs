<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Blog = <%= blog.name %></h3>
                </div>
                <div class="card-body p-4">
                    <form action="/updateBlog/<%= blog._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        
                        <div class="md-3">
                            <label for="name">Title</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Your Title" value="<%= blog.name %>" required />
                        </div>

                        <div class="mb-3">
                            <strong><label for="desc">Description:</label></strong>
                            <input type="text" name="desc" class="form-control form-control-lg" cols="4" rows="6" placeholder="Description"  value="<%= blog.desc %>"  required />
                        </div>


                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <img src="/<%= blog.image %>" width="100" class="img-thumbnail mt-1">
                        </div>


                        <input type="hidden" name="old_image" value="<%= blog.image %>"/>
                        
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Blog" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
